{{>layouts/header}}

<form class="container" action="/members/loginProcess" method="post">
    <div class="mb-3">
        <label class="form-label">이메일</label>
        <input type="email" class="form-control" name="email" placeholder="올바른 이메일 주소(예:~@naver.com)를 작성해 주세요.">
    </div>
    <div class="mb-3">
        <label class="form-label">비밀번호</label>
        <input type="password" class="form-control" name="password" placeholder="5자리 이상 입력해 주세요.">
    </div>

    {{#error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
    {{/error}}

    <button type="submit" class="btn btn-primary">로그인</button>
    <a href="/" class="btn btn-secondary">뒤로가기</a>
</form>

{{>layouts/footer}}
